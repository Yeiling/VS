<?xml version="1.0" encoding="utf-8" ?>
<!--autoReload:修改后自动加载-->
<!--throwConfigExceptions:NLog日志系统抛出异常-->
<!--internalLogLevel:内部日志的级别-->
<!--internalLogFile:内部日志保存路径，日志的内容大概就是NLog的版本信息，配置文件的地址等等-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Error"
      internalLogFile="logs/internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <targets>
    <target xsi:type="Null" name="blackhole" />
    <target name="database" xsi:type="Database"
                 connectionString="Data Source=39.105.178.182,3588;Initial Catalog=SYT_apiDB_Test;User ID=Test_sa;Password=data2018!;">

      <!--SQL Server日志数据表结构-->
      <!--
      create table NLog (
      Id                   int                  identity,
      Application          nvarchar(50)         null,
      Logged               datetime             null,
      Level                nvarchar(50)         null,
      Message              nvarchar(1500)        null,
      Logger               nvarchar(250)        null,
      Callsite             nvarchar(512)        null,
      Exception            nvarchar(1500)        null,
      constraint PK_NLOG primary key (Id)
      )-->
      <!--MySQL日志数据表结构-->
    
      <commandText>
        insert into nlog(Application,Logged,Level,Message,Logger,CallSite,Exception)
        values(@Application,@Logged,@Level,@Message,@Logger,@Callsite,@Exception)
      </commandText>
      <parameter name="@application" layout="shuiyitong.API" />
      <parameter name="@logged" layout="${date}" />
      <parameter name="@level" layout="${level}" />
      <parameter name="@message" layout="${message}" />
      <parameter name="@logger" layout="${logger}" />
      <parameter name="@callSite" layout="${callsite:filename=true}" />
      <parameter name="@exception" layout="${exception:tostring}" />
    </target>
  </targets>

  <rules>
    <!--Skip Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" minlevel="Error" writeTo="blackhole" final="true" />
    <logger name="*" minlevel="Error" writeTo="database" />
  </rules>
</nlog>